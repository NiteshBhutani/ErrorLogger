@{ 
    string username = string.Empty;
    if(Session["userName"] != null)
    {
        username = Session["userName"].ToString().Split(new char[1] { '@' })[0];
        username = char.ToUpper(username[0]) + username.Substring(1);
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.min.css" /> -->

    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/navbar.css?v={random/string}" />

</head>
<body>
    <div>
        <div class="nav navbar-default">
            <div class="container-fluid">
                <ul class="nav navbar-left">
                    <li role="presentation" style="font-size:18px">
                        @Html.ActionLink(username, "Index", "User")
                    </li>
                </ul>
                <ul class="nav navbar-right">
                    <li role="presentation" style="font-size:18px">
                        @Html.ActionLink("Logout", "Logout", "Home")
                    </li>
                 </ul>
               </div>
        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>
